<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <size
                android:width="@dimen/audio_segment_selector_trigger_width"
                android:height="@dimen/audio_segment_selector_trigger_height"/>
            <corners
                android:topLeftRadius="@dimen/audio_segment_selector_trigger_height"
                android:bottomLeftRadius="@dimen/audio_segment_selector_trigger_height"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grey"/>
            <size
                android:width="@dimen/audio_segment_selector_trigger_width"
                android:height="@dimen/audio_segment_selector_trigger_height"/>
            <corners
                android:topLeftRadius="@dimen/audio_segment_selector_trigger_height"
                android:bottomLeftRadius="@dimen/audio_segment_selector_trigger_height"/>
        </shape>
    </item>
</selector>

